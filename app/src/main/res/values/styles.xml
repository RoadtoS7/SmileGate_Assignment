<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="fontFamily">@font/notosanskr</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.PostDetail.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.PostDetail.Content" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TextAppearance.PostDetail.WriteComment" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Widget.Blog.BottomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="cornerRadius">0dp</item>
    </style>
    
    <style name="Theme.FullScreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>